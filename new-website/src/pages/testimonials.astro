---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

const testimonials = await getCollection('testimonials');
---

<BaseLayout title="Testimonials" description="What colleagues and clients say about working with Alexis Hernandez">
    <section class="pt-20 pb-16 px-4 sm:px-6 lg:px-8">
        <div class="max-w-7xl mx-auto">
            <div class="text-center mb-12">
                <h1 class="text-4xl md:text-6xl font-bold mb-4">Testimonials</h1>
                <p class="text-xl text-gray-300">What colleagues and clients say about working with me</p>
            </div>
            
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                {testimonials.map((testimonial) => (
                    <div class="bg-gray-800 rounded-lg p-6 shadow-lg hover:shadow-xl transition-shadow">
                        <div class="mb-4">
                            <svg class="w-8 h-8 text-blue-500 mb-2" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
                            </svg>
                        </div>
                        <p class="text-gray-300 mb-6 italic whitespace-pre-line text-justify">
                            "{testimonial.body}"
                        </p>
                        <div class="flex items-center">
                            <Image src={testimonial.data.image} alt={testimonial.data.author} class="w-12 h-12 rounded-full mr-4 object-cover" width={48} height={48} />
                            <div>
                                <p class="font-semibold text-lg">{testimonial.data.author}</p>
                                <p class="text-sm text-gray-400">{testimonial.data.position}</p>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </section>
</BaseLayout>